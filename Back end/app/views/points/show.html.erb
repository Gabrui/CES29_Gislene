<div class="container">
  <h2>Detalhes do ponto</h2>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Atributos</th>
        <th>Valores</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th>Latitude</th>
        <td><%= @point.lat %></td>
      </tr>
      <tr>
        <th>Longitude</th>
        <td><%= @point.lon %></td>
      </tr>
    </tbody>
  </table>
  <%= link_to 'Editar', edit_point_path(@point) %> |
  <%= link_to 'Voltar', points_path %>
</div>
