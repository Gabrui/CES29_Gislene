<%= form_for @tipo_novo, url: :aom do |f| %>  
    <div class="field"> 
      <%= f.label :nome_tipo %><br> 
      <%= f.text_area :nome_tipo %> 
    </div> 
    <%= f.label :descricao %><br>
    <%= f.text_area :descricao %>
    <div class="actions"> 
      <%= f.submit "Criar" %> 
    </div> 
<% end %>

<%= link_to 'Voltar', aom_path %>